{
    "name": "hoceineel/laravel-modular-subscriptions",
    "description": "A flexible Laravel package for managing subscriptions with custom modules",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "HoceineEl\\LaravelModularSubscriptions\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Hoceine EL Idrissi",
            "email": "contact@hoceine.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^11.0"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0",
        "pestphp/pest": "^2.0"
    },
    "extra": {
        "laravel": {
            "providers": [
                "HoceineEl\\LaravelModularSubscriptions\\ModularSubscriptionsServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}